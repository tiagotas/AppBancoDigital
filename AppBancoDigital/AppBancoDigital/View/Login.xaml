<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <Frame BorderColor="#CCC" 
                   HasShadow="True"
                   CornerRadius="10">
                <StackLayout>
                    <Label Text="Seu e-mail:" />
                    <Entry x:Name="txt_email" />
                    <Label Text="Sua senha:" />
                    <Entry x:Name="txt_senha" />
                    <Button Text="Entrar" Clicked="Button_Clicked_Entrar" />
                    <Button Text="Abrir Minha Conta" Clicked="Button_Clicked_Cadastro" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>