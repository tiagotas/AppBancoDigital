<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.TelaInicial">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="txt_correntista" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Seu saldo é de " />
                            <Span Text="Et₵ 1.000,00 " TextColor="Red" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Text="Fazer Pix" Clicked="Button_Clicked_Fazer_Pix" />
            <Button Text="Receber Pix" Clicked="Button_Clicked_Receber_Pix" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>